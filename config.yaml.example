# Folder paths - CHANGE THESE TO YOUR PATHS
source_dir: ""  # e.g., "C:\\Users\\YourName\\Downloads"
dest_dir: ""    # e.g., "C:\\Users\\YourName\\Pictures\\Sorted"

# UI settings
page_size: 15
max_filename_length: 120

# Categories - keywords match against AI captions, patterns match filenames
# Qwen2.5-VL produces detailed captions like:
#   "screenshot of VS Code with Python error in dark terminal"
#   "meme with text overlay showing cat reaction"
#   "digital art of cyberpunk city at night"
categories:
  Screenshots:
    keywords: [screenshot, screen, desktop, window, browser, code, terminal, error, ui, interface, dialog, menu, settings, notification]
    patterns: [Screenshot, Capture, Snip, Screen]
  AI_Generated:
    keywords: [digital art, fantasy, surreal, cyberpunk, sci-fi, concept art, rendered, illustration, artistic, generated, stylized, 3d render]
    patterns: [DALL, Midjourney, Stable, ComfyUI, Leonardo, Flux]
  Photos:
    keywords: [photo, photograph, portrait, landscape, nature, selfie, camera, outdoor, indoor, person, people, animal, dog, cat, food, travel]
    patterns: [IMG_, DSC, DCIM, PXL_, PHOTO]
  Memes:
    keywords: [meme, funny, comic, cartoon, reaction, humor, joke, text overlay, caption, twitter, reddit]
    patterns: [meme, reaction, funny]
  Documents:
    keywords: [document, text, chart, graph, diagram, infographic, table, data, spreadsheet, presentation, slide, pdf, report, form]
    patterns: [doc, scan, pdf, report]
  Icons_Logos:
    keywords: [icon, logo, symbol, badge, brand, emblem, app icon, favicon, trademark]
    patterns: [icon, logo, favicon, brand]
  Wallpapers:
    keywords: [wallpaper, background, panorama, scenic, abstract background, desktop background, 4k, ultrawide]
    patterns: [wallpaper, background, wall]
  Misc:
    keywords: []
    patterns: []

# Generic filename patterns (regex) - images matching these get renamed
generic_patterns:
  - '^IMG[_-]?\d+'
  - '^DSC[_-]?\d+'
  - '^Screenshot[_ ]?\d*'
  - '^PXL_\d+'
  - '^\d+$'
  - '^\d{10,}'
  - '^image[_-]?\d*'
  - '^photo[_-]?\d*'
  - '^ChatGPT.*Image'
  - '^DALL.E'
  - '^download'
